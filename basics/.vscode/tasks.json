{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile",
            "type": "process",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "compile and run",
            "type": "process",
            "command": "bash",
            "args": [
                "-c",
                "/usr/bin/g++ -std=c++17 -o '${fileBasenameNoExtension}' '${file}' && ./'${fileBasenameNoExtension}' < input.txt > output.txt"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
